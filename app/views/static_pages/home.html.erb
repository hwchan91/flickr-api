<h3>Flickr Getter</h3>
<p>Type in a Flickr ID to view its photos</p>

<%= form_tag(root_path, method: "get") do %>
  <%= label_tag(:user_id, "User ID:") %>
  <%= text_field_tag(:user_id) %>
  <%= submit_tag("Search") %>
<% end %>

<% if !@photos.nil? %>
  <br>
  <% @photos.each do |p| %>
        <%= link_to(image_tag(FlickRaw.url_q(p), :class => 'flickr_photo', :title => p.title, :border => 0, :size => '75x75'), FlickRaw.url_photopage(p)) %>
  <% end %>
<% end %>
